<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Personalized Clock App</title>

    <!-- Google Identity Services -->
    <script src="https://accounts.google.com/gsi/client" async defer></script>

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #1e1e2f;
            color: white;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .container {
            background: #2b2b3c;
            padding: 30px;
            border-radius: 12px;
            text-align: center;
            width: 350px;
        }

        select {
            margin-top: 10px;
            padding: 5px;
        }

        .time {
            font-size: 2.5rem;
            margin-top: 15px;
        }

        .date {
            margin-top: 5px;
            font-size: 1.2rem;
        }
    </style>
</head>
<body>

<div class="container">
    <h2 id="welcome">Sign in to view your clock</h2>

    <!-- Google Sign-In Button -->
    <div id="g_id_onload"
         data-client_id="YOUR_CLIENT_ID"
         data-callback="handleCredentialResponse">
    </div>

    <div class="g_id_signin" data-theme="outline"></div>

    <div id="clockSection" style="display:none;">
        <div class="date" id="date"></div>
        <div class="time" id="time"></div>

        <label>Time Format:</label><br>
        <select id="format">
            <option value="12">12 Hour</option>
            <option value="24">24 Hour</option>
        </select>
    </div>
</div>

<script>
    let userTimeZone = Intl.DateTimeFormat().resolvedOptions().timeZone;

    function handleCredentialResponse(response) {
        const user = JSON.parse(atob(response.credential.split('.')[1]));

        document.getElementById("welcome").textContent =
            "Welcome, " + user.name;

        document.getElementById("clockSection").style.display = "block";

        loadPreferences();
        updateClock();
        setInterval(updateClock, 1000);
    }

    function updateClock() {
        const format = document.getElementById("format").value;
        const now = new Date();

        const dateOptions = {
            weekday: 'long',
            year: 'numeric',
            month: 'long',
            day: 'numeric',
            timeZone: userTimeZone
        };

        const timeOptions = {
            hour: 'numeric',
            minute: 'numeric',
            second: 'numeric',
            hour12: format === "12",
            timeZone: userTimeZone
        };

        document.getElementById("date").textContent =
            new Intl.DateTimeFormat('en-US', dateOptions).format(now);

        document.getElementById("time").textContent =
            new Intl.DateTimeFormat('en-US', timeOptions).format(now);

        localStorage.setItem("timeFormat", format);
    }

    function loadPreferences() {
        const savedFormat = localStorage.getItem("timeFormat");
        if (savedFormat) {
            document.getElementById("format").value = savedFormat;
        }
    }
</script>

</body>
</html>
